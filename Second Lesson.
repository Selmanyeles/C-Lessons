#include <stdio.h>

int main()
{
	int x,hour,minute,second;
	
	printf("Please enter the second: ");
	scanf("%d",&x);
	
	hour = (x / 3600);
	
	minute = (x % 3600) / 60;
	
	second = (x % 3600) % 60;
	
	printf("\n%d hour(s), %d minute(s), %d second(s)\n",hour,minute,second);
	// Irmak   <3 Selman 
	return 0;
}

